<center>
    <h1>PAGINA DE LOS PAGOS EN PAYPAL</h1>
</center>
{{#each productos}}
<div class="row">
    {{#each this}}
    <div class="col-sm-6 col-md-4">
        <div class="thumbnail">
            <img src={{this.imagePath}} alt="..." class="img-responsive">
            <div class="caption">
                <h3 class="h3v">{{this.titulo}}</h3>
                <p>{{this.descripcion}}</p>
                <div class="clearfix">
                    <div class="precio pull-left"><i class="fas fa-dollar-sign"></i>  {{this.precio}}</div>
                    <a href="/carrito/{{this._id}}" class="btn btn-success pull-right" role="button">
                        <i class="fas fa-money-bill"></i> AÃ±adir al Carrito</a>
                </div>
            </div>
        </div>
    </div>
    {{/each}}
</div>

{{/each}}